#include <iostream>
using namespace std;

void prototypeFunction ();
double angka1, angka2, angka3, angka4;

int main ()
{
	prototypeFunction ();
}

void prototypeFunction ()
{
	cout << "			STRUK PERBELANJAAN DI LITA'S MART       ";
	cout << endl;
	cout << endl;
	
	cout << "Jumlah Barang yang di Beli : ";
	cin >> angka1;
	cout << endl;
	
	cout << "Harga yang Harus di Bayar : ";
	cin >> angka2;
	cout << endl;
	
	cout << "Jumlah Uang yang di Bayarkan : ";
	cin >> angka3;
	cout << endl;
	
	cout << "Jumlah Barang : " << (angka1) << endl;
	cout << "Total Pembelian : " << (angka2) << endl;
	cout << "Jumlah Pembayaran : " << (angka3) << endl;
	cout << "Jumlah Kembalian : " << (angka3 - angka2) << endl;
	
}
